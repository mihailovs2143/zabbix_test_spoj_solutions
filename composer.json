{
    "name": "candidate/zabbix-spoj-solutions",
    "description": "Algorithmic problem solutions for Zabbix PHP developer interview",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Candidate",
            "email": "candidate@example.com"
        }
    ],
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "friendsofphp/php-cs-fixer": "^3.45"
    },
    "autoload": {
        "psr-4": {
            "ZabbixSPOJ\\": "php/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ZabbixSPOJ\\Tests\\": "php/tests/"
        }
    },
    "scripts": {
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --coverage-html coverage/",
        "cs-check": "php-cs-fixer fix --dry-run --diff",
        "cs-fix": "php-cs-fixer fix"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
